<div class="container text-center">

<ul>
  {{#if errors}}
  {{#each errors}}
  <li>{{this.message}}</li>
  {{/each}}
  {{/if}}
</ul>

<ul style="background-color: aquamarine;">
  {{#if ok}}
  {{#each ok}}
  <h2>{{this.message}}</h2>
  {{/each}}
  {{/if}}
</ul>

  {{#if user}}
  <h1>Bienvenido {{user.name}} a tu perfil</h1>
  <h2 class="text-white">Que deseas hacer?</h2>
  <a href="/report/add" class="btn btn-success">Reportar Callejero</a>
  <a href="/report" class="btn btn-primary">Ver mis callejeros</a>
  <a href="/auth/edit" class="btn btn-warning">Editar mis datos</a>
  {{else}}
  <h1>no estas logeado</h1>
  {{/if}}
</div>