<link href="../../css/signin.css" rel="stylesheet">

<ul>
  {{#if message}}
  <div style="text-align: center;" class="alert alert-{{message.type}}">
    <strong>{{message.intro}}</strong> {{message.message}}
  </div>
  {{/if}}
</ul>

<div class="text-center">
  {{#if userDelete}}
  {{#each userDelete}}
  <li style="background-color: rgb(244, 188, 188); border-radius: 5px;">{{this.message}}</li>
  {{/each}}
  {{/if}}
</div>

<div class="text-center">
  {{#if errors}}
  <h4 >Error al iniciar Sesion:</h4>
  {{#each errors}}
  <li style="background-color: rgb(244, 188, 188); border-radius: 5px;">{{this.message}}</li>
  {{/each}}
  {{/if}}
</div>


<form class="form-signin text-center" action="/auth/login" method="POST">
  <img class="mb-4" src="/img/estaticas/login.jpg" alt="" width="100%" height="100%">
  <div class="form-floating">
    <input id="email" name="email" type="email" class="form-control" placeholder="Email">
    <label for="email">Email</label>
  </div>
  <div class="form-floating">
    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    <label for="password">Password</label>
  </div>

  <button class="w-100 mb-4 btn btn-lg btn-info" type="submit">Login</button>
  <a href="/auth/register" type="button" class="w-100 btn btn-lg btn-primary mb-4">Registrarse</a>
  <a href="/" type="button" class="w-100 btn btn-lg btn-danger">Volver</a>
</form>