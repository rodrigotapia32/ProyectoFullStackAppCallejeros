<ul>
  {{#if errors}}
  <h4>Error de registro:</h4>
  {{#each errors}}
  <li>{{this.message}}</li>
  {{/each}}
  {{/if}}
</ul>

<div class="container">
  <div class="row">
    <div class="col-lg-12 shadow-lg p-3 mb-5">
      <div class="card border-primary">
        <div class="card-header bg-primary text-white">Actualizar datos</div>
        <div class="card-body text-primary">
          <form action="/report/edit/{{posts.id}}" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label>Foto</label>
              <input type="file" name="foto"/>
              <dir>
                Foto Anterior: <img width="20%" src="/img/callejeros/{{posts.photo}}" class="" alt="">
              </dir>
            </div>
            <div class="mb-3">
              <label for="" class="text-danger">Datos anteriores: {{posts.address}}</label>
              <input id="address" name="address" type="text" class="form-control" placeholder="Ingresar Ubicacion" >
            </div>
            <div class="mb-3">
              <label for="" class="text-danger">Datos anteriores: {{posts.description}}</label>
              <input placeholder="Ingresar Descripcion" id="description" name="description" type="text" class="form-control">
            </div>
        </div>
        <div class="card-footer bg-transparent border-primary">
          <button class="btn btn-primary">Actualizar</button>
          <a href="/report" class="btn btn-danger">Cancelar</a>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>